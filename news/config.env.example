# Dgraph Connection Configuration
# Format: dgraph://host:port?sslmode=verify-ca&bearertoken=token

# Example connection string for HyperMode
DGRAPH_CONNECTION_STRING=dgraph://host:port?sslmode=verify-ca&bearertoken=token

# Alternative local connection (uncomment to use)
# DGRAPH_CONNECTION_STRING=@dgraph://localhost:8080

# AI Provider Configuration
# Choose one: OPENAI_API_KEY or ANTHROPIC_API_KEY
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# AI Model Configuration
EMBEDDING_MODEL=text-embedding-3-small
CHAT_MODEL=gpt-4o-mini
# For Anthropic: claude-3-sonnet-20240229

# Import Configuration
BATCH_SIZE=100
DATA_DIR=data/articles
EMBEDDING_BATCH_SIZE=50

# Logging
LOG_LEVEL=INFO

# Optional: Ollama Configuration (for local models)
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_MODEL=nomic-embed-text
